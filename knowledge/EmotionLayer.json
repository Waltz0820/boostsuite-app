{
  "$schema": "https://boostsuite.schemas/emotion-layer.v1.json",
  "version": "1.2.0",
  "default_emotion": "安心",
  "global_taboo_phrases": [
    "はじめてでも、むずかしくない。",
    "驚きの体験をあなたに",
    "新常識",
    "今すぐチェック"
  ],
  "emotions": [
    {
      "id": "効率",
      "aliases": ["時短", "生産性", "手軽"],
      "tones": ["キビキビ"],
      "patterns": [
        "もう、探さない。ワンタッチで始められる。",
        "手数を減らす。それだけで一日が軽くなる。"
      ],
      "use_for_modes": ["gadget", "lifestyle"]
    },
    {
      "id": "安心",
      "aliases": ["安全", "やさしさ", "信頼"],
      "tones": ["やわらかい", "ナチュラル"],
      "patterns": [
        "迷わず使える。説明は短く、安心は長く。",
        "長く付き合える道具は、静かに役立つ。"
      ],
      "use_for_modes": ["kids", "beauty", "gift", "lifestyle"],
      "taboo_phrases": ["初心者でも簡単"] 
    },
    {
      "id": "自己表現",
      "aliases": ["らしさ", "変身", "自信"],
      "tones": ["インスパイア"],
      "patterns": [
        "似合うのは、理由じゃない。らしさだ。",
        "一枚で、気分が一段上がる。"
      ],
      "use_for_modes": ["fashion", "beauty", "entertainment"]
    },
    {
      "id": "絆",
      "aliases": ["感謝", "贈り物", "共感"],
      "tones": ["やわらかい", "プレミアム"],
      "patterns": [
        "“あの人へ”が、ちゃんと届くかたちで。",
        "言葉にしづらい想いを、品で包む。"
      ],
      "use_for_modes": ["gift", "kids"]
    },
    {
      "id": "挑戦",
      "aliases": ["革新", "冒険", "成長"],
      "tones": ["キビキビ", "インスパイア"],
      "patterns": [
        "試せるうちに、試しておく。",
        "昨日より少しだけ難しいことを。"
      ],
      "use_for_modes": ["gadget", "entertainment", "fashion"]
    },
    {
      "id": "癒し",
      "aliases": ["安らぎ", "落ち着き", "リラックス"],
      "tones": ["やわらかい", "プレミアム"],
      "patterns": [
        "ふっと力が抜ける、その瞬間のために。",
        "静かな時間が、肌と心を整える。"
      ],
      "use_for_modes": ["beauty", "lifestyle", "gift"]
    }
  ],
  "category_overrides": [
    { "category": "家電・IoT・デジタル/生活家電", "primary_emotion": "効率", "fallbacks": ["安心"] },
    { "category": "家電・IoT・デジタル/美容家電", "primary_emotion": "癒し", "fallbacks": ["安心", "自己表現"] },
    { "category": "ファッション/レディースウェア", "primary_emotion": "自己表現", "fallbacks": ["挑戦"] },
    { "category": "ギフト/法人・ビジネスギフト", "primary_emotion": "絆", "fallbacks": ["安心", "効率"] },
    { "category": "美容・ヘルスケア/スキンケア", "primary_emotion": "癒し", "fallbacks": ["安心"] },
    { "category": "ホビー・エンタメ/ゲーム・AR", "primary_emotion": "挑戦", "fallbacks": ["自己表現"] }
  ]
}
